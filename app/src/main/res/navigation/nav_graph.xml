<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listQuoteFragment">

    <fragment
        android:id="@+id/listQuoteFragment"
        android:name="com.example.gamestores.ui.view.fragment.ListGameFragment"
        android:label="ListQuoteFragment" >
        <action
            android:id="@+id/action_listQuoteFragment_to_detailQuoteFragment"
            app:destination="@id/detailQuoteFragment" />
        <action
            android:id="@+id/action_listQuoteFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_listQuoteFragment_to_categoriesFragment2"
            app:destination="@id/categoriesFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailQuoteFragment"
        android:name="com.example.gamestores.ui.view.fragment.DetailGameFragment"
        android:label="fragment_detail_quote"
        tools:layout="@layout/fragment_detail_game" />
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.gamestores.ui.view.fragment.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.gamestores.ui.view.fragment.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" />

</navigation>